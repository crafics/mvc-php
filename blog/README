1. checkout or download
----------------------------------------
http://code.google.com/p/dschini/source/checkout
http://dschini.googlecode.com/files/blog-v0.2.zip

2. create the database
----------------------------------------
CREATE DATABASE  `blog` DEFAULT CHARACTER SET utf8 COLLATE utf8_unicode_ci;

CREATE TABLE IF NOT EXISTS `posts` (
  `id` int(11) NOT NULL AUTO_INCREMENT,
  `created` datetime NOT NULL,
  `author` varchar(100) COLLATE utf8_unicode_ci NOT NULL,
  `title` varchar(255) COLLATE utf8_unicode_ci NOT NULL,
  `body` text COLLATE utf8_unicode_ci NOT NULL,
  `tags` varchar(150) COLLATE utf8_unicode_ci NOT NULL,
  PRIMARY KEY (`id`)
) ENGINE=MyIsam  DEFAULT CHARSET=utf8 COLLATE=utf8_unicode_ci ;

CREATE TABLE IF NOT EXISTS `settings` (
  `id` int(11) NOT NULL AUTO_INCREMENT,
  `created` datetime NOT NULL,
  `name` varchar(100) COLLATE utf8_unicode_ci NOT NULL,
  `value` varchar(255) COLLATE utf8_unicode_ci NOT NULL,
  PRIMARY KEY (`id`),
  UNIQUE KEY `name` (`name`)
) ENGINE=MyIsam DEFAULT CHARSET=utf8 COLLATE=utf8_unicode_ci ;

CREATE TABLE IF NOT EXISTS `comments` (
  `id` int(11) NOT NULL AUTO_INCREMENT,
  `created` datetime NOT NULL,
  `post_id` int(11) NOT NULL,
  `author` varchar(100) COLLATE utf8_unicode_ci NOT NULL,
  `body` text COLLATE utf8_unicode_ci NOT NULL,
  PRIMARY KEY (`id`)
) ENGINE=MyIsam  DEFAULT CHARSET=utf8 COLLATE=utf8_unicode_ci ;

CREATE USER 'dschini'@'localhost' IDENTIFIED BY 'dschini';

GRANT USAGE ON * . * TO  'dschini'@'localhost' IDENTIFIED BY  'dschini' WITH MAX_QUERIES_PER_HOUR 0 MAX_CONNECTIONS_PER_HOUR 0 MAX_UPDATES_PER_HOUR 0 MAX_USER_CONNECTIONS 0 ;

GRANT SELECT , INSERT , UPDATE , DELETE , CREATE , DROP , REFERENCES , INDEX , ALTER , CREATE TEMPORARY TABLES , CREATE VIEW , SHOW VIEW , CREATE ROUTINE, ALTER ROUTINE, EXECUTE ON `blog` . * TO  'dschini'@'localhost';

INSERT INTO `settings` (`id`, `created`, `name`, `value`) VALUES(1, '2008-11-29 19:29:12', 'name', 'Blog Starter Pack');
INSERT INTO `settings` (`id`, `created`, `name`, `value`) VALUES(2, '2008-11-29 19:29:12', 'description', 'powered by dschini - a lightweight php framework ');
INSERT INTO `settings` (`id`, `created`, `name`, `value`) VALUES(3, '2008-11-29 19:29:12', 'languageAttributes', 'dir=');
INSERT INTO `settings` (`id`, `created`, `name`, `value`) VALUES(4, '2008-11-29 19:29:12', 'htmlType', 'text/html');
INSERT INTO `settings` (`id`, `created`, `name`, `value`) VALUES(5, '2008-11-29 19:29:12', 'charset', 'UTF-8');
INSERT INTO `settings` (`id`, `created`, `name`, `value`) VALUES(6, '2008-11-29 19:29:36', 'cssFolder', '/css');
INSERT INTO `settings` (`id`, `created`, `name`, `value`) VALUES(7, '2008-11-29 19:29:36', 'imgFolder', '/img');


3. Unzip and Apache Mappings
----------------------------------------
<VirtualHost *>
    AccessFileName .htaccess
    ServerName dschini.localhost
    DocumentRoot "/srv/www/blog/htdocs"
</VirtualHost>


4. Open http://localhost/blog/
----------------------------------------


